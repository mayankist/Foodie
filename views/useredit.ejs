<%- include ('partials/header'); -%>

<nav class="navbar navbar-expand-lg fixed-top navbar-light">
  <div class="container">
    <a href="/">
      <div class="navbar-brand">Foodie</div>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="fa fa-ellipsis-v" ></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <div class="navbar-nav  ml-auto mt-2 mt-lg-0">
        <% if(currentUser){ %>
          <a class="nav-link active" href="/user/<%= currentUser._id %>">Hello <%= currentUser.username %></a>
        <% } %>
        <a class="nav-link" href="/">Home</a>
        <% if(!currentUser){ %>
          <a class="nav-link" href="/user">Login</a>
        <% } else { %>
          <a class="nav-link" href="/logout">Logout</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<nav class="navbar mynav2">
<div class="container">
  <% if(error && error.length > 0){ %>
    <div class="alert alert-danger" role="alert">
      <button type="button" data-dismiss="alert" aria-label="Close" class="close" style="outline:none;">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= error %>
    </div>
  <% } %>
  <% if(success && success.length > 0){ %>
    <div class="alert alert-success" role="alert">
      <button type="button" data-dismiss="alert" aria-label="Close" class="close" style="outline:none;">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= success %>
    </div>
  <% } %>
</div>
</nav>

  <div class="container mt-4" style="padding-top: 50px;">
    <div class="row">
      <div class="col"></div>
      <div class="col-sm-7 col-md-6 col-lg-5">
        <div class="card shadow border-0">
          <div class="card-body">
            <h1 class="text-center">Edit Profile</h1>
            <p>
              <small class="text-muted">Fields marked * are required.</small>
            </p>
            <form class="needs-validation" action="/user/<%= user._id %>?_method=PUT" method="POST" novalidate>
              <div class="form-group">
                <label for="">Full Name*</label>
                <input type="text" name="user[name]" class="form-control" id="Name" value="<%= user.name %>" placeholder="full name" required>
                <div class="invalid-feedback">
                  You must enter a name.
                </div>
              </div>
              <div class="form-group">
                <label for="">Username*</label>
                <input type="text" name="user[username]" class="form-control" id="Username" value="<%= user.username %>">
              </div>
              <div class="form-group">
                <button class="btn btn-secondary" data-toggle="collapse" data-target="#otherfields" type="button">if Owner, click here!</button>
              </div>
            <div class="collapse" id="otherfields">
              <div class="form-group">
                <label for="">Shop Name*</label>
                <input type="text" name="user[shopName]" class="form-control" id="ShopName" value="<%= user.shopName %>" placeholder="shop name">
              </div>
              <div class="form-group">
                <label for="">Number*</label>
                <input type="text" name="user[number]" class="form-control" id="Number" value="<%= user.number %>" placeholder="number">
              </div>
              <div class="form-group">
                <label for="">Delivery Charge*</label>
                <input type="text" name="user[delivery]" class="form-control" id="deliverycharge" value="<%= user.delivery %>" placeholder="delivery charge">
              </div>
              <div class="form-group">
                <label for="">Menu Image*</label>
                <input type="text" name="user[menuImage]" class="form-control" id="menuImage" value="<%= user.menuImage %>" placeholder="menu image">
              </div>
            </div>
              <button type="submit" class="btn btn-danger btn-block">Submit</button>
              <button type="reset" class="btn btn-secondary btn-block">Reset</button>
            </form>
            <a href="/user/<%= user._id %>">Back</a>
          </div>
        </div>
      </div>
    </div>
  </div>

<%- include ('partials/footer'); -%>